{
  "title"    : "{{ post.title }}",
  "category" : "{{ post.category }}",
  "href"     : "{{ post.url }}",
  "date"     : {
    "day"   : "{{ post.date | date: "%d" }}",
    "month" : "{{ post.date | date: "%B" }}",
    "year"  : "{{ post.date | date: "%Y" }}"
  }, 
  "date2": "{{ post.date | date_to_string }}", 
  "content": "{{ post.content }}",
  "excerpt": "{{ page.excerpt | textilize }}"
}
